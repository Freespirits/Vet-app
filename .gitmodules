# Submódulos Git para PetCare Pro
# Define repositórios externos como submódulos

# ==============================================================================
# SUBMÓDULO: DESIGN SYSTEM
# ==============================================================================

[submodule "design-system"]
	path = libs/design-system
	url = https://github.com/petcare-pro/design-system.git
	branch = main
	update = rebase

# ==============================================================================
# SUBMÓDULO: COMPONENTES COMPARTILHADOS
# ==============================================================================

[submodule "shared-components"]
	path = libs/shared-components
	url = https://github.com/petcare-pro/shared-components.git
	branch = main
	update = merge

# ==============================================================================
# SUBMÓDULO: UTILITÁRIOS VETERINÁRIOS
# ==============================================================================

[submodule "vet-utils"]
	path = libs/vet-utils
	url = https://github.com/petcare-pro/veterinary-utils.git
	branch = stable
	update = rebase

# ==============================================================================
# SUBMÓDULO: SCHEMAS DE BANCO DE DADOS
# ==============================================================================

[submodule "database-schemas"]
	path = db/schemas
	url = https://github.com/petcare-pro/database-schemas.git
	branch = main
	update = merge

# ==============================================================================
# SUBMÓDULO: DOCUMENTAÇÃO TÉCNICA
# ==============================================================================

[submodule "technical-docs"]
	path = docs/technical
	url = https://github.com/petcare-pro/technical-documentation.git
	branch = main
	update = merge

# ==============================================================================
# SUBMÓDULO: ASSETS COMPARTILHADOS
# ==============================================================================

[submodule "shared-assets"]
	path = assets/shared
	url = https://github.com/petcare-pro/shared-assets.git
	branch = main
	update = merge

# ==============================================================================
# SUBMÓDULO: CONFIGURAÇÕES DE CI/CD
# ==============================================================================

[submodule "ci-configs"]
	path = .github/shared-workflows
	url = https://github.com/petcare-pro/ci-cd-configs.git
	branch = main
	update = rebase

# ==============================================================================
# SUBMÓDULO: SCRIPTS DE DESENVOLVIMENTO
# ==============================================================================

[submodule "dev-scripts"]
	path = scripts/shared
	url = https://github.com/petcare-pro/development-scripts.git
	branch = main
	update = rebase

# ==============================================================================
# SUBMÓDULO: BIBLIOTECA DE TESTES
# ==============================================================================

[submodule "test-utils"]
	path = test/utils
	url = https://github.com/petcare-pro/test-utilities.git
	branch = main
	update = merge

# ==============================================================================
# SUBMÓDULO: VALIDADORES E TIPOS
# ==============================================================================

[submodule "validators"]
	path = libs/validators
	url = https://github.com/petcare-pro/data-validators.git
	branch = main
	update = rebase

# ==============================================================================
# CONFIGURAÇÕES ESPECÍFICAS DOS SUBMÓDULOS
# ==============================================================================

# Configurações para shallow clones (melhor performance)
[submodule "design-system"]
	shallow = true
	
[submodule "shared-components"]
	shallow = true

[submodule "shared-assets"]
	shallow = true

# Configurações para seguir tags específicas
[submodule "vet-utils"]
	fetchRecurseSubmodules = false

[submodule "database-schemas"]
	fetchRecurseSubmodules = false

# ==============================================================================
# NOTAS IMPORTANTES
# ==============================================================================

# Para inicializar todos os submódulos:
# git submodule init
# git submodule update --recursive

# Para clonar o repositório incluindo submódulos:
# git clone --recurse-submodules https://github.com/petcare-pro/petcare-mobile.git

# Para atualizar todos os submódulos:
# git submodule update --recursive --remote

# Para atualizar um submódulo específico:
# git submodule update --remote libs/design-system

# Para adicionar novo submódulo:
# git submodule add https://github.com/repo/url.git path/to/submodule

# Para remover um submódulo:
# git submodule deinit -f path/to/submodule
# rm -rf .git/modules/path/to/submodule
# git rm -f path/to/submodule
